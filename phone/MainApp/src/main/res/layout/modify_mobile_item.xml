<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="@dimen/dimen_15"
    style="@style/my_list_style">


    <ImageView
        android:id="@+id/right_arrow"
        android:layout_width="@dimen/dimen_30"
        android:layout_height="@dimen/dimen_30"
        style="@style/my_list_right_img_style"/>

    <TextView
        android:id="@+id/tv_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/right_arrow"
        android:layout_marginRight="15dp"
        android:textSize="15sp"
        android:textColor="@color/color_805500"
        android:text="134*****777"
        style="@style/modify_mobile_item_text_style"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/name"
        android:layout_toLeftOf="@id/right_arrow"
        android:layout_toRightOf="@id/left_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/my_list_center_text_style"
        android:text="@string/modify_mobile"
        />
</RelativeLayout>