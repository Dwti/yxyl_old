<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_44"
                android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="@dimen/dimen_40"
        android:layout_height="@dimen/dimen_40"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dimen_2"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginTop="@dimen/dimen_2"
        android:background="@drawable/logo"/>

    <ImageView
        android:id="@+id/item_right_arrow"
        style="@style/my_list_right_img_style"
        android:layout_width="@dimen/dimen_30"
        android:layout_height="@dimen/dimen_30"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_15"
        />
    <TextView
        android:id="@+id/item_content"
        style="@style/shadow_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_toLeftOf="@id/item_right_arrow"
        android:gravity="center_vertical|right"
        android:maxLines="2"
        android:shadowColor="@color/color_ffff99"
        android:textColor="@color/color_805500"
        android:textSize="@dimen/dimen_14"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="未选择版本"
        />
    <TextView
        android:id="@+id/item_name"
        style="@style/shadow_text_style"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dimen_10"
        android:layout_marginRight="@dimen/dimen_10"
        android:layout_toLeftOf="@+id/item_content"
        android:layout_toRightOf="@+id/item_icon"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:maxLines="2"
        android:shadowColor="@color/color_ffff99"
        android:text="@string/user_name_txt"
        android:textColor="@color/color_805500"
        android:textSize="@dimen/dimen_20"
        android:textStyle="bold"
        />
</RelativeLayout>