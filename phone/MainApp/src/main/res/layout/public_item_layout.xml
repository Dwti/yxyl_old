<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_public_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_44"
        android:background="@drawable/selector_my_fragment_selecter"
        >
    <TextView android:layout_width="wrap_content"
              android:layout_height="@dimen/dimen_44"
              android:id="@+id/item_name"
              style="@style/yanxiu_text_15_color_ff323232"
              android:layout_marginLeft="@dimen/dimen_15"
              android:gravity="center_vertical"
              android:layout_centerVertical="true"
              android:text="@string/user_name_txt"
            />
    <ImageView
            android:id="@+id/item_select_view"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_44"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_15"
            android:visibility="gone"
            android:src="@drawable/sex_sel_bg"/>
    <ImageView
            android:id="@+id/item_right_arrow"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_44"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_15"
            android:visibility="gone"
            android:src="@drawable/group_right_selector"/>

    <TextView android:layout_width="match_parent"
              android:layout_height="@dimen/dimen_44"
              android:id="@+id/item_sub_content"
              style="@style/yanxiu_text_15_color_ff646464"
              android:layout_marginRight="@dimen/dimen_10"
              android:layout_toLeftOf="@id/item_right_arrow"
              android:layout_toRightOf="@id/item_name"
              android:gravity="center_vertical|right"
              android:layout_centerVertical="true"
              android:maxLines="1"
              android:ellipsize="end"
              android:visibility="gone"
            />
    <View android:layout_width="match_parent" android:layout_height="1px"
          android:background="@color/color_ffe2e2e2"
          android:layout_alignParentBottom="true"
          android:layout_marginLeft="@dimen/dimen_10"
          android:visibility="gone"
          android:id="@+id/item_divider_line"
            />
</RelativeLayout>