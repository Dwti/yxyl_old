<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="@dimen/dimen_300"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/login_and_pwd_selector"
              android:orientation="vertical"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_10"
    android:drawablePadding="@dimen/dimen_5"
    android:paddingLeft="@dimen/dimen_15"
    android:paddingTop="@dimen/dimen_18"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="@dimen/dimen_25"
        android:layout_height="@dimen/dimen_25"
        android:gravity="left|center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dimen_10"
        android:src="@drawable/tips_icon"/>
    <TextView
        android:id="@+id/stage_title_tv"
        style="@style/shadow_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:shadowColor="@color/color_ffff99"
        android:text="@string/stage_tag"
        android:textColor="@color/color_805500"
        android:textSize="@dimen/dimen_17"
        android:textStyle="bold"
        />
</LinearLayout>
    <TextView
        android:id="@+id/stage_desc_tv"
        style="@style/shadow_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:lineSpacingExtra="@dimen/dimen_3"
        android:paddingLeft="@dimen/dimen_15"
        android:paddingRight="@dimen/dimen_10"
        android:shadowColor="@color/color_ffff99"
        android:text="@string/stage_description_txt"
        android:textColor="@color/color_805500"
        android:textSize="@dimen/dimen_14"

        />
    <TextView
        android:id="@+id/stage_confirm_tv"
        style="@style/shadow_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_20"
        android:paddingBottom="@dimen/dimen_10"
        android:gravity="center"
        android:shadowColor="@color/color_ffff99"
        android:text="@string/stage_confirm_answer_txt"
        android:textColor="@color/color_805500"
        android:textSize="@dimen/dimen_17"
        android:textStyle="bold"
        />
    <LinearLayout
        android:id="@+id/upgrade_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_15"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/stage_layout_sure"
            style="@style/shadow_text_style"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_marginRight="@dimen/dimen_8"
            android:layout_weight="1"
            android:background="@drawable/register_code_selector"
            android:gravity="center"
            android:shadowColor="@color/color_ffff99"
            android:text="@string/stage_confirm_sure"
            android:textColor="@color/color_805500"
            android:textSize="@dimen/dimen_15"
            />
        <View android:layout_width="@dimen/dimen_0"
              android:layout_height="@dimen/dimen_40"
              android:background="@color/color_ffc8c7cc"
            />
        <TextView
            android:id="@+id/stage_layout_cel"
            style="@style/shadow_text_style"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_marginRight="@dimen/dimen_8"
            android:layout_weight="1"
            android:background="@drawable/register_code_selector"
            android:gravity="center"
            android:shadowColor="@color/color_ffff99"
            android:text="@string/app_upgrade_cancle"
            android:textColor="@color/color_805500"
            android:textSize="@dimen/dimen_15"
            />
    </LinearLayout>
</LinearLayout>
