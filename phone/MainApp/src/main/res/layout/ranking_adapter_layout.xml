<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_104"
                android:background="@drawable/rank_item_bg">

       <com.common.core.view.roundview.RoundedImageView
           android:id="@+id/headImage"
           android:layout_width="@dimen/dimen_70"
           android:layout_height="@dimen/dimen_70"
           android:layout_centerVertical="true"
           android:layout_marginLeft="@dimen/dimen_23"
           android:layout_marginRight="@dimen/dimen_15"
            android:scaleType="centerCrop"
           />

      <ImageView
        android:id="@+id/imageDecorate"
        android:layout_width="@dimen/dimen_70"
        android:layout_height="@dimen/dimen_70"
        android:layout_marginLeft="@dimen/dimen_23"
        android:layout_centerVertical="true"
        android:background="@drawable/pic_sel_selector"
        android:scaleType="centerCrop">
       </ImageView>

       <com.yanxiu.gphone.student.view.StrokeTextView
           android:id="@+id/rankLeftIcon"
           android:layout_width="@dimen/dimen_30"
           android:layout_height="@dimen/dimen_30"
           android:layout_marginLeft="@dimen/dimen_10"
           android:textSize="@dimen/dimen_11"
           android:layout_alignParentTop="true"
           android:layout_alignParentLeft="true"
           android:textColor="@color/color_ffffff"
           android:gravity="center"
           tools:text="12"
           />
    <ImageView
        android:id="@+id/rankRightIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        tools:background="@drawable/champion"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_70"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/headImage">
        <TextView
            android:id="@+id/title"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_805500"
            android:textSize="@dimen/dimen_17"
            android:layout_marginRight="@dimen/dimen_30"
            android:singleLine="true"
            android:ellipsize="end"
            android:textStyle="bold"
            style="@style/text_fff99_shadow_style"
            tools:text="test"
            />
        <TextView
            android:id="@+id/content"

            android:layout_below="@id/title"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/dimen_12"
            android:textColor="@color/color_805500"
            style="@style/text_fff99_shadow_style"
            tools:text="test"
            />
        <TextView
            android:id="@+id/answer_text"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_below="@id/content"
            android:layout_width="@dimen/dimen_39"
            android:layout_height="@dimen/dimen_18"
            android:textSize="@dimen/dimen_10"
            android:textColor="@color/color_ffdb4d"
            android:background="@drawable/answer_num_bg"
            android:gravity="center"
            android:text="@string/answer_text_title"
            tools:text="test"
            />
        <TextView
            android:id="@+id/answer_content_text"
            android:layout_toRightOf="@id/answer_text"
            android:layout_below="@id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_marginLeft="@dimen/dimen_10"
            android:textSize="@dimen/dimen_15"
            android:textStyle="bold"
            style="@style/text_fff99_shadow_style"
            android:textColor="@color/color_805500"
            tools:text="85400"
            />

        <TextView
            android:id="@+id/correct_content_text"
            android:layout_below="@id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_marginLeft="@dimen/dimen_10"
            android:textSize="@dimen/dimen_15"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            style="@style/text_fff99_shadow_style"
            android:textColor="@color/color_007373"
            tools:text="85400"

            />

        <TextView
            android:id="@+id/correct_text"
            android:layout_marginTop="@dimen/dimen_8"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_below="@id/content"
            android:layout_toLeftOf="@id/correct_content_text"
            android:layout_width="@dimen/dimen_39"
            android:layout_height="@dimen/dimen_18"
            android:textSize="@dimen/dimen_10"
            android:textColor="@color/color_ffdb4d"
            android:background="@drawable/correct_num_bg"
            android:gravity="center"
            android:text="@string/correct_text_title"
            tools:text="test1"
            />
    </RelativeLayout>



</RelativeLayout>