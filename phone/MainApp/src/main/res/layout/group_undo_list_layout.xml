<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/yanxiu_group_bg">
    <include android:id="@+id/group_hw_undo_list_top"
             layout="@layout/public_top_layout"
        />
    <com.common.core.view.xlistview.XListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/group_hw_undo_list"
            android:layout_below="@id/group_hw_undo_list_top"
            android:layout_marginLeft="@dimen/dimen_30"
            android:layout_marginRight="@dimen/dimen_30"
            android:cacheColorHint="@null"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none"
            />
</RelativeLayout>
