<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="@dimen/dimen_300"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:background="@drawable/login_and_pwd_selector"
              android:orientation="vertical"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dimen_10"
    android:drawablePadding="@dimen/dimen_5"
    android:paddingLeft="@dimen/dimen_15"
    android:paddingTop="@dimen/dimen_18"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/stage_title_tv"
        style="@style/shadow_text_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shadowColor="@color/color_ffff99"
        android:gravity="center_horizontal"
        android:text="@string/mistake_popup_title"
        android:textColor="@color/color_805500"
        android:textSize="@dimen/dimen_17"
        android:textStyle="bold"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginBottom="@dimen/dimen_5"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            style="@style/shadow_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dimen_3"
            android:shadowColor="@color/color_ffff99"
            android:text="@string/mistake_question_tatle"
            android:textColor="@color/color_805500"
            android:textSize="@dimen/dimen_14"
            />
        <TextView
            android:id="@+id/mistake_question_tatle"
            style="@style/shadow_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dimen_3"
            android:shadowColor="@color/color_ffff99"
            android:textColor="@color/color_805500"
            android:text="X"
            android:textSize="@dimen/dimen_14"
            />
        <TextView
            style="@style/shadow_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dimen_3"
            android:shadowColor="@color/color_ffff99"
            android:text="@string/mistake_question"
            android:textColor="@color/color_805500"
            android:textSize="@dimen/dimen_14"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginBottom="@dimen/dimen_5"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            style="@style/shadow_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dimen_3"
            android:shadowColor="@color/color_ffff99"
            android:text="@string/mistake_question_right"
            android:textColor="@color/color_805500"
            android:textSize="@dimen/dimen_14"
            />
        <TextView
            android:id="@+id/mistake_question_right"
            style="@style/shadow_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dimen_3"
            android:shadowColor="@color/color_ffff99"
            android:textColor="@color/color_805500"
            android:text="X"
            android:textSize="@dimen/dimen_14"
            />
        <TextView
            style="@style/shadow_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dimen_3"
            android:shadowColor="@color/color_ffff99"
            android:text="@string/mistake_question"
            android:textColor="@color/color_805500"
            android:textSize="@dimen/dimen_14"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_5"
        android:layout_marginBottom="@dimen/dimen_5"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            style="@style/shadow_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dimen_3"
            android:shadowColor="@color/color_ffff99"
            android:text="@string/mistake_question_fail"
            android:textColor="@color/color_805500"
            android:textSize="@dimen/dimen_14"
            />
        <TextView
            android:id="@+id/mistake_question_fail"
            style="@style/shadow_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dimen_3"
            android:shadowColor="@color/color_ffff99"
            android:textColor="@color/color_805500"
            android:text="X"
            android:textSize="@dimen/dimen_14"
            />
        <TextView
            style="@style/shadow_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dimen_3"
            android:shadowColor="@color/color_ffff99"
            android:text="@string/mistake_question"
            android:textColor="@color/color_805500"
            android:textSize="@dimen/dimen_14"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/upgrade_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_15"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/stage_layout_sure"
            style="@style/shadow_text_style"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_marginRight="@dimen/dimen_8"
            android:layout_weight="1"
            android:background="@drawable/register_code_selector"
            android:gravity="center"
            android:shadowColor="@color/color_ffff99"
            android:text="@string/mistake_question_again"
            android:textColor="@color/color_805500"
            android:textSize="@dimen/dimen_15"
            />
        <View android:layout_width="@dimen/dimen_0"
              android:layout_height="@dimen/dimen_40"
              android:background="@color/color_ffc8c7cc"
            />
        <TextView
            android:id="@+id/stage_layout_cel"
            style="@style/shadow_text_style"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginLeft="@dimen/dimen_8"
            android:layout_marginRight="@dimen/dimen_8"
            android:layout_weight="1"
            android:background="@drawable/register_code_selector"
            android:gravity="center"
            android:shadowColor="@color/color_ffff99"
            android:text="@string/mistake_question_loginout"
            android:textColor="@color/color_805500"
            android:textSize="@dimen/dimen_15"
            />
    </LinearLayout>
</LinearLayout>
