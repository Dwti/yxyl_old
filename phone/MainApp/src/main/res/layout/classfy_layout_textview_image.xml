<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="80dp">
    <com.yanxiu.gphone.student.view.question.YXiuAnserTextView
        android:id="@+id/classfy_answer_popup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_8"
        android:padding="@dimen/dimen_9"
        android:textSize="@dimen/dimen_15"
        android:gravity="center_horizontal"
        android:background="@drawable/selector_judge_item"
        android:textColor="@color/color_333333">
    </com.yanxiu.gphone.student.view.question.YXiuAnserTextView>
    <ImageView
        android:id="@+id/widget_title_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:adjustViewBounds="true"
        android:paddingTop="-10dp"
        android:scaleType="fitStart"
        android:src="@drawable/classfy_del_icon" />
</FrameLayout>

