<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/dimen_40"
              android:layout_margin="@dimen/dimen_3"
              android:layout_weight="1"
              android:background="@drawable/home_nav_bar_selecter"
              android:duplicateParentState="true"
              android:gravity="center"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/nav_icon"
        android:layout_width="@dimen/dimen_33"
        android:layout_height="@dimen/dimen_33"
        android:background="@drawable/navi_main_normal"
        android:scaleType="centerInside"/>

    <TextView
        android:id="@+id/nav_txt"
        style="@style/home_nav_bar_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_1"
        android:gravity="center_vertical"
        android:text="@string/exe"/>
</LinearLayout>