<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:record="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

    <RelativeLayout
        android:id="@+id/fl_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.yanxiu.gphone.student.view.takephoto.FocusView
        android:id="@+id/view_focus"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
    <SeekBar
        android:id="@+id/sb1"
        android:layout_marginTop="5dp"
        android:layout_width="200dp"
        android:layout_marginRight="5dp"
        android:layout_centerHorizontal="true"
        android:maxHeight="3dip"
        android:minHeight="3dip"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:background="#30000000"
        android:layout_height="44dp">
        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_5"
            android:src="@drawable/iv_return" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#30000000"
        android:layout_height="110dp">
        <TextView
            android:id="@+id/iv_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_15"
            android:textSize="16sp"
            android:text="@string/picture"
            android:textColor="@color/color_12b7f5"
            android:background="?attr/selectableItemBackgroundBorderless"
            />

        <ImageView
            android:id="@+id/iv_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimen_15"
            android:src="@drawable/flash_auto" />
        <com.yanxiu.gphone.student.view.takephoto.RecordVideoStatueCircle
            android:id="@+id/iv_capture"
            android:layout_width="@dimen/dimen_70"
            android:layout_height="@dimen/dimen_70"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="visible"
            record:rectCol="@color/color_ffffff"
            record:rectRoundW="@dimen/dimen_2"
            record:rectW="@dimen/dimen_26"
            record:ringCol="@color/color_ffffff"
            record:ringStrokeWidth="@dimen/dimen_3"
            record:ringWidth="@dimen/dimen_35"
            record:statueCircleColor="@color/color_ffffff"
            record:statueCircleWidth="@dimen/dimen_28"
            />
    </RelativeLayout>

    <com.yanxiu.gphone.student.view.StudentLoadingLayout
        android:id="@+id/loading_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

</RelativeLayout>