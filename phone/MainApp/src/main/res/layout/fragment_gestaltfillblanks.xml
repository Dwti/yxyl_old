<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/question_top_content_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/rl_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_top"
        android:orientation="vertical">
        <com.yanxiu.gphone.student.view.ExpandableRelativeLayoutlayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/rl_top_view"
            android:layout_weight="1.5"
            android:orientation="vertical">


            <RelativeLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_below="@+id/rl_top"
                android:layout_above="@+id/rl_bottom">

                <FrameLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:layout_marginBottom="@dimen/dimen_30"
                    android:background="@drawable/question_read_content_bg">

                    <ScrollView android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/sv_content_top">

                        <LinearLayout android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.yanxiu.gphone.student.view.question.fillblanks.FillBlanksButtonFramelayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/dimen_10"
                                android:layout_gravity="center"
                                android:id="@+id/fill_blanks_button"
                                android:layout_below="@+id/rl_anwser_pen"/>

                        </LinearLayout>
                    </ScrollView>
                </FrameLayout>
                <ImageButton android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_13"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/iv_bottom_ctrl"
                    android:background="@drawable/complex_question_up_down"/>
            </RelativeLayout>

        </com.yanxiu.gphone.student.view.ExpandableRelativeLayoutlayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/ll_bottom_view"
            android:layout_weight="2" >

            <include layout="@layout/fragment_answer_view" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
