<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/rl_top"
        layout="@layout/question_top_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_top"
        android:orientation="vertical">

        <com.yanxiu.gphone.student.view.ExpandableRelativeLayoutlayout
            android:id="@+id/rl_top_view"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="@dimen/dimen_20"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/dimen_28"
                android:layout_height="@dimen/dimen_30"
                android:layout_marginTop="@dimen/dimen_10"
                android:src="@drawable/icon_question_q" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_12"
                android:layout_toRightOf="@+id/image">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dimen_30"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@drawable/question_read_content_bg">

                    <ScrollView
                        android:id="@+id/sv_content_top"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.yanxiu.gphone.student.view.question.fillblanks.FillBlanksButtonFramelayout
                                android:id="@+id/fill_blanks_button"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl_anwser_pen"
                                android:layout_gravity="center"
                                android:padding="@dimen/dimen_10" />

                        </LinearLayout>
                    </ScrollView>
                </FrameLayout>

                <ImageButton
                    android:id="@+id/iv_bottom_ctrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/dimen_13"
                    android:background="@drawable/complex_question_up_down" />
            </RelativeLayout>

        </com.yanxiu.gphone.student.view.ExpandableRelativeLayoutlayout>

        <LinearLayout
            android:id="@+id/ll_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <include layout="@layout/fragment_answer_view" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
