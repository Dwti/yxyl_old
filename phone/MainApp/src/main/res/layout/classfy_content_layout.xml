<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/dimen_30">


        <LinearLayout
            android:id="@+id/ll_answer_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_20"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_50"
                android:layout_marginTop="@dimen/dimen_10"
                android:background="@drawable/question_read_content_bg">

                <ScrollView
                    android:id="@+id/sv_content_top"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.yanxiu.gphone.student.view.question.YXiuAnserTextView
                            android:id="@+id/yxiu_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rl_anwser_pen"
                            android:layout_gravity="center"
                            android:padding="@dimen/dimen_10"
                            android:textColor="@color/color_black"
                            android:textSize="@dimen/dimen_15" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp">

                            <com.yanxiu.gphone.student.view.SimpleAudioPlayer
                                android:id="@+id/audioPlayer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                            <TextView
                                android:id="@+id/tv_timer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="5dp"
                                android:text="00:00"
                                android:textColor="#999999"
                                android:singleLine="true"
                                android:textSize="14sp"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>
            </FrameLayout>

        </LinearLayout>

        <View
            android:id="@+id/view_line_ccc4a3_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1"
            android:layout_below="@id/ll_answer_content"
            android:layout_marginBottom="@dimen/dimen_20"
            android:layout_marginLeft="@dimen/dimen_60"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginTop="@dimen/dimen_20"
            android:background="@drawable/repeat_common_line"
            android:layerType="software" />


        <LinearLayout
            android:id="@+id/ll_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_line_ccc4a3_2"
            android:layout_margin="@dimen/dimen_20"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dimen_26"
                android:layout_height="@dimen/dimen_28"
                android:src="@drawable/icon_question_a" />

            <com.yanxiu.gphone.student.view.question.choicequestion.ChoiceQuestions
                android:id="@+id/cq_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_answer">

            <com.yanxiu.gphone.student.view.YanxiuTypefaceButton
                android:id="@+id/add_problem_analysis"
                style="@style/btn_problem_analysis"
                app:type_face="fz.ttf" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/content_problem_analysis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_answer" />

    </RelativeLayout>

</ScrollView>