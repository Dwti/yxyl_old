<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dimen_12"
    android:paddingTop="@dimen/dimen_12">

    <LinearLayout
        android:id="@+id/ll_bgtextview_left"
        android:layout_width="@dimen/dimen_120"
        android:layout_height="wrap_content"
        android:background="@drawable/connect_no"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:minHeight="@dimen/dimen_60">

        <com.yanxiu.gphone.studentold.view.ConnectTextView
            android:id="@+id/textview_left"
            android:layout_width="@dimen/dimen_70"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/ll_bgtextview_right"
        android:layout_width="@dimen/dimen_120"
        android:layout_height="wrap_content"
        android:background="@drawable/connect_no"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:minHeight="@dimen/dimen_60"
        android:orientation="horizontal">

        <com.yanxiu.gphone.studentold.view.ConnectTextView
            android:id="@+id/textview_right"
            android:layout_width="@dimen/dimen_70"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>