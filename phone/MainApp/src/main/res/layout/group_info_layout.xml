<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/yanxiu_group_bg"
    >
    <include android:id="@+id/group_info_top"
             layout="@layout/public_top_layout"
        />
    <View
        android:id="@+id/group_info_top_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/group_info_top"
        android:background="@color/color_99000000"
        />

    <RelativeLayout
        android:id="@+id/group_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:background="@drawable/login_and_pwd_selector"
        android:paddingTop="@dimen/dimen_10"
        android:paddingBottom="@dimen/dimen_20"
        android:visibility="visible"
        >

        <com.common.core.view.roundview.RoundedImageView
            android:id="@+id/group_info_icon"
            style="@style/shadow_text_style"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:layout_margin="@dimen/dimen_10"
            android:scaleType="centerCrop"
            android:shadowColor="@color/color_e5c545"
            android:src="@drawable/group_info_icon"
            />
        <ImageView
            android:id="@+id/group_info_icon_top"
            style="@style/shadow_text_style"
            android:layout_width="@dimen/dimen_80"
            android:layout_height="@dimen/dimen_80"
            android:layout_alignLeft="@id/group_info_icon"
            android:layout_alignTop="@id/group_info_icon"
            android:layout_alignRight="@id/group_info_icon"
            android:layout_alignBottom="@id/group_info_icon"
            android:scaleType="centerCrop"
            android:shadowColor="@color/color_e5c545"
            android:src="@drawable/user_group_detail_bg"
            />
        <TextView
            android:id="@+id/group_info_name"
            style="@style/shadow_text_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/group_info_icon"
            android:layout_toRightOf="@id/group_info_icon"
            android:shadowColor="@color/color_ffff99"
            android:textColor="@color/color_805500"
            android:textSize="@dimen/dimen_17"
            tools:text="三年二班语文"
            />

        <LinearLayout
            android:id="@+id/group_mem_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_toRightOf="@id/group_info_icon"
            android:layout_below="@+id/group_info_num"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/group_info_kemu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@drawable/user_group_mem_info_bg"
                android:gravity="center"
                android:paddingTop="@dimen/dimen_3"
                android:paddingBottom="@dimen/dimen_3"
                android:text="@string/group_info_banzhuren"
                android:textColor="@color/color_ffdb4d"
                android:textSize="@dimen/dimen_11"
                />

            <TextView
                android:id="@+id/group_info_kemu_text"
                style="@style/shadow_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1.5"
                android:gravity="center"
                android:shadowColor="@color/color_ffff99"
                android:textColor="@color/color_805500"
                android:textSize="@dimen/dimen_15"
                tools:text="王老师"
                />

            <TextView
                android:id="@+id/group_info_people"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:background="@drawable/user_group_mem_info_bg"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_5"
                android:paddingTop="@dimen/dimen_3"
                android:paddingBottom="@dimen/dimen_3"
                android:text="@string/group_info_people"
                android:textColor="@color/color_ffdb4d"
                android:textSize="@dimen/dimen_11"
                />

            <TextView
                android:id="@+id/group_info_people_text"
                style="@style/shadow_text_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1.0"
                android:gravity="center"
                android:shadowColor="@color/color_ffff99"
                android:textColor="@color/color_805500"
                android:textSize="@dimen/dimen_15"
                tools:text="48"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/group_info_num"
            style="@style/shadow_text_style"
            android:layout_marginTop="@dimen/dimen_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_info_name"
            android:layout_toRightOf="@id/group_info_icon"
            android:gravity="center_vertical"
            android:shadowColor="@color/color_ffff99"
            android:text="@string/group_info_num"
            android:textColor="@color/color_805500"
            android:textSize="@dimen/dimen_12"
            />
        <ImageView
            android:id="@+id/dash_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/group_info_icon"
            android:layout_marginTop="@dimen/dimen_15"
            android:background="@drawable/repeat_common_line"
            />
        <TextView
            android:id="@+id/group_info_click"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_44"
            android:layout_below="@id/dash_line"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_15"
            android:layout_marginBottom="@dimen/dimen_3"
            android:background="@drawable/register_code_selector"
            android:gravity="center"
            android:padding="@dimen/dimen_5"
            android:shadowColor="@color/color_ffff99"
            android:text="@string/group_info_add"
            android:textColor="@color/color_805500"
            android:textSize="@dimen/dimen_17"
            android:textStyle="bold"
            />
    </RelativeLayout>
</RelativeLayout>