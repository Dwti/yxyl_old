<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_screen"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dimen_30"
    android:paddingRight="@dimen/dimen_30"
    android:paddingTop="@dimen/dimen_193"
    android:paddingBottom="@dimen/dimen_96">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_and_pwd_selector"
    android:padding="@dimen/dimen_20"
    android:scrollbars="none">
<LinearLayout
              android:id="@+id/container"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
          android:layout_marginLeft="@dimen/dimen_15"
          android:layout_marginRight="@dimen/dimen_15"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/classfyDelPopText"
          android:gravity="center"
          android:layout_marginBottom="@dimen/dimen_10"
          android:textColor="@color/color_333333"
          android:textSize="@dimen/dimen_17"
        />


    <com.yanxiu.gphone.student.view.question.classfy.ClassfyAnswers
        android:id="@+id/classfy_text_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="15dp"
        android:visibility="gone"/>
    <com.common.core.view.UnMoveGridView
        android:id="@+id/classfy_icon_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_10"
        android:numColumns="4"
        android:visibility="gone"/>

</LinearLayout>
</ScrollView>
</LinearLayout>




