<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_public_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/top_space_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_15"
        android:layout_alignParentTop="true"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_55"
        android:layout_gravity="center_vertical"
        android:background="@drawable/my_list_bg_selector"
        >
        <ImageView
            android:id="@+id/item_icon"
            android:layout_width="@dimen/dimen_40"
            android:layout_height="@dimen/dimen_40"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_5"
            android:background="@drawable/logo"/>

        <ImageView
            android:id="@+id/item_right_arrow"
            style="@style/my_list_right_img_style"
            android:layout_width="@dimen/dimen_30"
            android:layout_height="@dimen/dimen_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_15"
            />

        <com.yanxiu.gphone.student.view.YanxiuTypefaceTextView
            app:type_face="fz.ttf"
            android:id="@+id/item_sub_content"
            style="@style/shadow_text_style"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_50"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_toLeftOf="@id/item_right_arrow"
            android:gravity="center_vertical|right"
            android:maxLines="2"
            android:shadowColor="@color/color_ffff99"
            android:textColor="@color/color_805500"
            android:textSize="@dimen/dimen_14"
            tools:text="未选择版本"
            />

        <com.yanxiu.gphone.student.view.YanxiuTypefaceTextView
            app:type_face="fz.ttf"
            android:id="@+id/item_name"
            style="@style/shadow_text_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_10"
            android:layout_toLeftOf="@+id/item_sub_content"
            android:layout_toRightOf="@+id/item_icon"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:shadowColor="@color/color_ffff99"
            android:text="@string/user_name_txt"
            android:textColor="@color/color_805500"
            android:textSize="@dimen/dimen_20"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/item_divider_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_8"
        android:layout_marginRight="@dimen/dimen_8"
        android:background="@drawable/my_module_repeat_dash_line"
        android:visibility="visible"
        />
    <View
        android:id="@+id/bottom_space_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_15"
        android:layout_alignParentTop="true"
        android:visibility="gone"/>
</LinearLayout>