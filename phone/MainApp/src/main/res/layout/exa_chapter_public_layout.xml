<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/tv_exa_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_exa_error"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:padding="@dimen/dimen_10"
        android:layout_marginLeft="@dimen/dimen_10"
        android:textColor="@color/color_805500"
        android:textSize="@dimen/dimen_17"
        android:shadowColor="@color/color_ffff99"
        style="@style/shadow_text_style"
        tools:text="ajkdfaksdnfkasdfasdf"/>

    <TextView
        android:id="@+id/tv_exa_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/iv_right_row"
        android:gravity="center"
        android:layout_marginRight="@dimen/dimen_5"
        style="@style/shadow_text_style"
        android:shadowColor="@color/color_ffff99"
        android:textColor="@color/color_805500"
        android:textSize="@dimen/dimen_12"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_right_row"
        android:layout_width="@dimen/dimen_25"
        android:layout_height="@dimen/dimen_25"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_10"
        android:src="@drawable/examination_right_row"/>
</RelativeLayout>