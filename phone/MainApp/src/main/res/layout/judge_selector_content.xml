<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_answer_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/dimen_40"
        android:background="@drawable/repeat_common_line" />

    <FrameLayout
        android:id="@+id/fl_txt_a"
        android:layout_width="@dimen/dimen_40"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_answer_line"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="@dimen/dimen_26"
            android:layout_height="@dimen/dimen_28"
            android:src="@drawable/icon_question_a" />

    </FrameLayout>

    <com.yanxiu.gphone.student.view.question.judgequestion.JudgeQuestions
        android:id="@+id/jq_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_answer_line"
        android:layout_toRightOf="@id/fl_txt_a" />

</RelativeLayout>