<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_bg"
    android:fadingEdge="vertical"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_p_23">

        <include
            android:id="@+id/layout_top"
            layout="@layout/public_parent_top_layout" />

        <RelativeLayout
            android:id="@+id/personal_information_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_p_98"
            android:layout_below="@id/layout_top"
            android:layout_marginTop="@dimen/dimen_p_20"
            android:background="@color/color_white_p">

            <com.common.core.view.roundview.RoundedImageView
                android:id="@+id/iv_header"
                android:layout_width="@dimen/dimen_p_60"
                android:layout_height="@dimen/dimen_p_60"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen_p_8"
                android:src="@drawable/parent_hearder_default"
                app:riv_corner_radius="100dp" />

            <TextView
                android:id="@+id/tv_parent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_p_17"
                android:layout_marginTop="@dimen/dimen_p_27"
                android:layout_toRightOf="@id/iv_header"
                android:singleLine="true"
                android:textColor="@color/color_333333_p"
                android:textSize="@dimen/dimen_p_15"
                tool:text="孙长龙" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rl_relieveiv_bind"
                android:paddingTop="@dimen/dimen_p_8"
                android:paddingBottom="@dimen/dimen_p_10"
                android:paddingRight="@dimen/dimen_p_8"
                android:layout_alignLeft="@id/tv_parent_name"
                android:layout_below="@id/tv_parent_name" >

                <TextView
                    android:id="@+id/tv_student_name"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dimen_p_18"
                    android:gravity="center"
                    android:ellipsize="middle"
                    android:singleLine="true"
                    android:textColor="@color/color_999999_p"
                    android:textSize="@dimen/dimen_p_14"
                    tool:text="孙长龙的家长" />

                <ImageView
                    android:id="@+id/iv_relieveiv_bind"
                    android:layout_toRightOf="@id/tv_student_name"
                    android:layout_width="@dimen/dimen_p_18"
                    android:layout_height="@dimen/dimen_p_18"
                    android:layout_marginLeft="@dimen/dimen_p_8"
                    android:src="@drawable/parent_relieveiv_bind_icon" />


            </RelativeLayout>

            <include layout="@layout/my_parent_arrow" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_person_honor"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_p_39"
            android:layout_below="@id/personal_information_layout"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_p_8"
            android:textColor="@color/color_b28f47_p"
            android:textSize="@dimen/dimen_p_12"
            tool:text="长隆获得荣誉" />

        <RelativeLayout
            android:id="@+id/national_ranking_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_person_honor"
            android:background="@color/color_white_p"
            android:padding="@dimen/dimen_p_8">

            <ImageView
                android:id="@+id/national_ranking_right_arrow"
                style="@style/parent_my_list_image"
                android:src="@drawable/parent_national_ranking_icon" />

            <TextView
                android:id="@+id/national_ranking_name"
                style="@style/parent_my_list_text"
                android:layout_toRightOf="@id/national_ranking_right_arrow"
                android:text="@string/national_ranking_name"
                tool:text="本周练习全国排名" />

            <TextView
                android:id="@+id/national_ranking_name_num"
                style="@style/parent_my_list_text"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_p_7"
                android:textColor="@color/color_b28f47_p"
                android:textSize="@dimen/dimen_p_15"
                tool:text="100" />


        </RelativeLayout>

        <View
            android:id="@+id/view_line_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_p_1"
            android:layout_below="@id/national_ranking_layout"
            android:background="@color/color_e6e6e6_p" />

        <RelativeLayout
            android:id="@+id/rank_of_honor_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_line_1"
            android:background="@color/color_white_p"
            android:padding="@dimen/dimen_p_8">

            <ImageView
                android:id="@+id/rank_of_honor_right_arrow"
                style="@style/parent_my_list_image"
                android:src="@drawable/parent_honor_icon" />

            <TextView
                android:id="@+id/rank_of_honor_name"
                style="@style/parent_my_list_text"
                android:layout_toRightOf="@id/rank_of_honor_right_arrow"
                android:text="@string/rank_of_honor_name"
                tool:text="获得荣誉次数" />

            <TextView
                android:id="@+id/rank_of_honor_name_num"
                style="@style/parent_my_list_text"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dimen_p_7"
                android:textColor="@color/color_b28f47_p"
                android:textSize="@dimen/dimen_p_15"
                tool:text="679" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/feedback_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rank_of_honor_layout"
            android:layout_marginTop="@dimen/dimen_p_20"
            android:background="@color/color_white_p"
            android:padding="@dimen/dimen_p_8">

            <ImageView
                android:id="@+id/feedback_right_arrow"
                style="@style/parent_my_list_image"
                android:src="@drawable/parent_feed_back_icon" />

            <TextView
                android:id="@+id/feedback_name"
                style="@style/parent_my_list_text"
                android:layout_toRightOf="@id/feedback_right_arrow"
                android:text="@string/feedback_name"
                tool:text="意见反馈" />

            <include layout="@layout/my_parent_arrow" />

        </RelativeLayout>

        <View
            android:id="@+id/view_line_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_p_1"
            android:layout_below="@id/feedback_layout"
            android:background="@color/color_e6e6e6_p" />

        <RelativeLayout
            android:id="@+id/settings_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_line_2"
            android:background="@color/color_white_p"
            android:padding="@dimen/dimen_p_8">

            <ImageView
                android:id="@+id/settings_right_arrow"
                style="@style/parent_my_list_image"
                android:src="@drawable/parent_setting_icon" />

            <TextView
                android:id="@+id/settings_name"
                style="@style/parent_my_list_text"
                android:layout_toRightOf="@id/settings_right_arrow"
                android:text="@string/settings_name"
                tool:text="设置" />

            <include layout="@layout/my_parent_arrow" />

        </RelativeLayout>

        <View
            android:id="@+id/view_line_3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_p_1"
            android:layout_below="@id/settings_layout"
            android:background="@color/color_e6e6e6_p" />

        <RelativeLayout
            android:id="@+id/login_out_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_line_3"
            android:background="@color/color_white_p"
            android:padding="@dimen/dimen_p_8">

            <ImageView
                android:id="@+id/login_out_right_arrow"
                style="@style/parent_my_list_image"
                android:src="@drawable/parent_login_out_icon" />

            <TextView
                android:id="@+id/login_out_name"
                style="@style/parent_my_list_text"
                android:layout_toRightOf="@id/login_out_right_arrow"
                android:text="@string/login_out_name"
                tool:text="退出登录" />

            <include layout="@layout/my_parent_arrow" />

        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
