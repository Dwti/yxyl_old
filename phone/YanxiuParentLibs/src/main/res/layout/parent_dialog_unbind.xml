<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_4c000000"
    android:fillViewport="true"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <RelativeLayout
        android:layout_width="@dimen/dimen_p_245"
        android:layout_height="@dimen/dimen_p_420"
        android:layout_marginTop="@dimen/dimen_p_113"
        android:layout_centerHorizontal="true"
        android:background="@color/color_white_p" >

        <com.yanxiu.gphone.parent.view.YanxiuParentTypefaceTextView
            android:id="@+id/tv_unbind_dialog_txt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_p_43"
            android:gravity="center"
            android:textColor="@color/color_333333_p"
            android:textSize="@dimen/dimen_p_12"
            android:text="@string/parent_undind_dialgo_txt"
            app:type_p_face="MetroPlayType.otf" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_p_1px"
            android:layout_below="@id/tv_unbind_dialog_txt"
            android:id="@+id/view_line_1"
            android:background="@color/color_ebebeb_p" />

        <com.common.core.view.roundview.RoundedImageView
            android:layout_height="@dimen/dimen_p_107"
            android:layout_width="@dimen/dimen_p_107"
            android:layout_below="@id/view_line_1"
            android:layout_marginTop="@dimen/dimen_p_38"
            android:layout_centerHorizontal="true"
            android:id="@+id/unbind_child_header"
            android:scaleType="centerCrop"
            app:riv_corner_radius="100dp"
            android:src="@drawable/parent_hearder_default"/>

        <com.yanxiu.gphone.parent.view.YanxiuParentTypefaceTextView
            android:id="@+id/tv_unbind_dialog_child_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/unbind_child_header"
            android:layout_marginTop="@dimen/dimen_p_75"
            android:gravity="center"
            android:textColor="@color/color_333333_p"
            android:textSize="@dimen/dimen_p_15"
            tool:text="孙小龙"
            app:type_p_face="MetroPlayType.otf" />

        <com.yanxiu.gphone.parent.view.YanxiuParentTypefaceTextView
            android:id="@+id/tv_unbind_dialog_child_class"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_unbind_dialog_child_name"
            android:layout_marginTop="@dimen/dimen_p_17"
            android:gravity="center"
            android:textColor="@color/color_999999_p"
            android:textSize="@dimen/dimen_p_12"
            tool:text="清华附中高三二班"
            app:type_p_face="MetroPlayType.otf" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_p_1px"
            android:layout_marginTop="@dimen/dimen_p_62"
            android:layout_above="@+id/ll_bottom_content"
            android:id="@+id/view_line_2"
            android:background="@color/color_ebebeb_p" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_p_48"
            android:id="@+id/ll_bottom_content"
            android:layout_alignParentBottom="true" >

            <Button android:text="@string/parent_undind_cancel"
                android:textColor="@color/color_999999_p"
                android:id="@+id/btn_unbind_cancel"
                style="@style/unbind_button_style" />

            <View
                android:layout_width="@dimen/dimen_p_1px"
                android:layout_height="match_parent"
                android:background="@color/color_ebebeb_p" />

            <Button android:text="@string/parent_undind_sure"
                android:textColor="@color/color_333333_p"
                android:id="@+id/btn_unbind_sure"
                style="@style/unbind_button_style" />


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>