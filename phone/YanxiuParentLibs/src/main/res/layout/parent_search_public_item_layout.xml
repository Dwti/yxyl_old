<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/item_public_layout"
        android:layout_width="match_parent"
        android:background="@drawable/location_selector"
        android:layout_height="wrap_content" >

    <TextView android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_p_50"
        android:id="@+id/item_name"
        style="@style/parent_location_text_style"
        android:text="@string/user_name_txt"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/item_select_view"
        android:layout_width="@dimen/dimen_p_30"
        android:layout_height="@dimen/dimen_p_30"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_p_8"
        android:visibility="gone"
        android:src="@drawable/parent_select_arrow_icon"/>

    <ImageView
        android:id="@+id/item_right_arrow"
        android:layout_width="@dimen/dimen_p_30"
        android:layout_height="@dimen/dimen_p_30"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_p_8"
        android:visibility="gone"
        android:src="@drawable/parent_right_arrow_icon"/>

</RelativeLayout>