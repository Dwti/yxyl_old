<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:duplicateParentState="true"
              android:gravity="center"
              android:orientation="vertical">
    <FrameLayout android:id="@+id/red_dot_parent_layout" android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/nav_icon"
            android:layout_width="@dimen/dimen_p_30"
            android:layout_height="@dimen/dimen_p_30"
            android:scaleType="centerInside"
            android:src="@drawable/app_icon"/>
        <com.common.core.view.roundview.RoundedImageView
            android:id="@+id/nav_red_dot"
            android:layout_width="@dimen/dimen_p_10"
            android:layout_height="@dimen/dimen_p_10"
            android:layout_gravity="right|top"
            android:src="@color/color_cc0000_p"
            android:visibility="gone"
            app:riv_corner_radius="@dimen/dimen_p_10"/>
    </FrameLayout>

    <TextView
        android:id="@+id/nav_txt"
        style="@style/parent_home_nav_bar_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/navi_tbm_hometab"/>
</LinearLayout>