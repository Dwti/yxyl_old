<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@drawable/parent_home_bg"
    android:orientation="vertical">

    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:paddingLeft="@dimen/dimen_p_10"
        android:paddingRight="@dimen/dimen_p_10"
        android:scrollbars="none">

        <RelativeLayout android:id="@+id/rl_subject_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_p_8"
            android:background="@color/color_white_p"
            android:paddingTop="@dimen/dimen_p_8"
            android:paddingBottom="@dimen/dimen_p_8">

            <ImageView android:id="@+id/iv_subject_info_icon"
                android:layout_width="@dimen/dimen_p_30"
                android:layout_height="@dimen/dimen_p_30"
                android:layout_marginLeft="@dimen/dimen_p_12"
                android:layout_marginRight="@dimen/dimen_p_8"
                android:layout_marginTop="@dimen/dimen_p_8"
                android:layout_marginBottom="@dimen/dimen_p_8" />

            <com.yanxiu.gphone.parent.view.YanxiuParentTypefaceTextView
                android:id="@+id/tv_subjcet_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_subject_info_icon"
                android:layout_alignTop="@id/iv_subject_info_icon"
                android:layout_toRightOf="@id/iv_subject_info_icon"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/color_994d4d_p"
                android:textSize="@dimen/dimen_p_15"
                app:type_p_face="MetroPlayType.otf"
                tool:text="语文"
                android:textStyle="bold" />

            <TextView android:id="@+id/tv_home_subject_info_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_p_12"
                android:layout_marginLeft="@dimen/dimen_p_8"
                android:layout_toRightOf="@id/tv_subjcet_info_name"
                android:textColor="@color/color_white_p"
                android:paddingLeft="@dimen/dimen_p_5"
                android:paddingRight="@dimen/dimen_p_5"
                android:paddingTop="@dimen/dimen_p_1"
                android:paddingBottom="@dimen/dimen_p_1"
                android:background="@drawable/home_time_bg_border"
                android:singleLine="true"
                tool:text="19:56" />

            <com.yanxiu.gphone.parent.view.YanxiuParentTypefaceTextView
                android:id="@+id/parent_submit_rank_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_p_15"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="30"
                android:textColor="@color/color_333333_p"
                android:textSize="@dimen/dimen_p_23"
                app:type_p_face="MetroPlayType.otf" />

            <com.yanxiu.gphone.parent.view.YanxiuParentTypefaceTextView
                android:id="@+id/parent_submit_rank_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_p_15"
                android:layout_marginTop="@dimen/dimen_p_6"
                android:layout_below="@id/parent_submit_rank_num"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/parent_submit_rank"
                android:textColor="@color/color_999999_p"
                android:textSize="@dimen/dimen_p_9"
                app:type_p_face="MetroPlayType.otf" />

            <include layout="@layout/public_sub_rate_title_layout"
                android:id="@+id/view_sub_rate_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_subject_info_icon" />

            <include layout="@layout/public_home_percent_rate_layout"
                android:id="@+id/view_home_percent_rate_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_sub_rate_title_layout" />

            <include layout="@layout/public_sub_time_title_layout"
                android:id="@+id/view_sub_time_title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_home_percent_rate_layout" />

            <include layout="@layout/public_home_percent_time_layout"
                android:id="@+id/view_home_percent_time_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_sub_time_title_layout" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_p_1px"
                android:id="@+id/view_sub_info_line"
                android:layout_below="@id/view_home_percent_time_layout"
                android:background="@color/color_ebebeb_p" />

            <com.yanxiu.gphone.parent.view.YanxiuParentTypefaceTextView
                android:id="@+id/tv_sub_info_techer_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/iv_subject_info_icon"
                android:layout_below="@id/view_sub_info_line"
                android:layout_marginTop="@dimen/dimen_p_8"
                android:layout_marginRight="@dimen/dimen_p_8"
                android:layout_toLeftOf="@+id/current_exercise_center_line"
                android:gravity="left|center_vertical"
                android:padding="@dimen/dimen_p_14"
                android:background="@color/color_f5f5f5_p"
                android:textColor="@color/color_b28f47_p"
                android:textSize="@dimen/dimen_p_14" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>