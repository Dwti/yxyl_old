<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed -->
    <item android:state_pressed="true" >
        <shape  android:shape="rectangle">
            <gradient
                    android:startColor="@color/color_ff47b0ed"
                    android:endColor="@color/color_ff47b0ed"
                    android:angle="270" />
            <corners
                    android:radius="4dp" />
        </shape>
    </item>
    <!-- focus -->
    <item android:state_focused="true" >
        <shape>
            <gradient
                    android:startColor="@color/color_ff47b0ed"
                    android:endColor="@color/color_ff47b0ed"
                    android:angle="270" />
            <corners
                    android:radius="4dp" />
        </shape>
    </item>
    <!-- default -->
    <item>
        <shape>
            <gradient
                    android:startColor="@color/color_white"
                    android:endColor="@color/color_white"
                    android:angle="270" />
            <stroke android:width="1dp" android:color="@color/color_ff47b0ed"/>
            <corners
                    android:radius="4dp" />
        </shape>
    </item>

</selector>