<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/container"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/color_99000000"
              android:gravity="bottom">

    <RelativeLayout
        android:layout_width="@dimen/dimen_306"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_40"
        android:layout_marginRight="@dimen/dimen_40"
        android:layout_marginBottom="@dimen/dimen_30"
        android:paddingBottom="@dimen/dimen_20"
        android:paddingTop="@dimen/dimen_12"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/forget_pwd_nor">
        <ImageView
            android:id="@+id/tips_icon"
            android:layout_width="@dimen/dimen_25"
            android:layout_height="@dimen/dimen_25"
            android:src="@drawable/tips_icon"
            android:layout_marginTop="@dimen/dimen_2"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_10"
            android:layout_marginBottom="@dimen/dimen_8"
            />
        <TextView
            android:layout_marginTop="@dimen/dimen_1"
            android:layout_marginRight="@dimen/dimen_4"
            android:layout_marginBottom="@dimen/dimen_7"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_33"
            android:id="@+id/firText"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@id/tips_icon"
            android:layout_toEndOf="@id/tips_icon"
            android:gravity="center"
            android:textColor="@color/color_805500"
            android:text="dssdad"
            android:textSize="@dimen/dimen_12"
            />
        <include
            android:id="@+id/topLine"
            android:layout_below="@id/tips_icon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_4"
            layout="@layout/icon_select_top_line"
            />

        <LinearLayout
            android:id="@+id/secLinear"
            android:layout_below="@id/topLine"
            android:layout_marginTop="@dimen/dimen_13"
            android:layout_marginBottom="@dimen/dimen_14"
            android:layout_width="@dimen/dimen_130"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginLeft="@dimen/dimen_15"
            android:background="@drawable/btn_line_bg"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/secImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/bucket_icon"
                tools:visibility="visible"
                />
            <TextView
                android:id="@+id/secText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/system_btn_style"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/topLine"
            android:layout_marginTop="@dimen/dimen_13"
            android:layout_marginBottom="@dimen/dimen_14"
            android:layout_width="@dimen/dimen_130"
            android:layout_height="@dimen/dimen_40"
            android:layout_marginLeft="@dimen/dimen_12"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_toRightOf="@id/secLinear"
            android:layout_toEndOf="@id/secLinear"
            android:id="@+id/thrLinear"
            android:background="@drawable/btn_line_bg"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/thrImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/camera_icon"
                android:layout_gravity="center_vertical"
                tools:visibility="visible"
                />
            <TextView
                android:id="@+id/thrText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/system_btn_style"

                />
        </LinearLayout>

        <TextView
                  android:layout_marginLeft="@dimen/dimen_15"
                  android:layout_marginRight="@dimen/dimen_15"
                  android:layout_below="@id/secLinear"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/dimen_41"
                  android:id="@+id/fourText"
                  android:gravity="center"
                  android:textColor="@color/color_805500"
                  android:background="@drawable/btn_line_bg"
                  android:textSize="@dimen/dimen_17"
                  android:visibility="gone"
            />


    </RelativeLayout>

</LinearLayout>



