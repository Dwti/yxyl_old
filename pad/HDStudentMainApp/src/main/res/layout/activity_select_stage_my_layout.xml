<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/blue_bg">
    <include android:id="@+id/top_layout"
             layout="@layout/public_top_layout"
            />
    <LinearLayout
        android:layout_width="@dimen/dimen_350"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <include android:layout_width="match_parent"
                 android:layout_height="@dimen/dimen_48"
                 android:id="@+id/primary_stage_layout"
                 layout="@layout/activity_info_select_public_item"
            />
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_7"
            android:layout_marginRight="@dimen/dimen_7"
            layout="@layout/bitmap_repeat_layout"
            />
        <include android:layout_width="match_parent"
                 android:layout_height="@dimen/dimen_48"
                 android:id="@+id/juinor_stage_layout"
                 layout="@layout/activity_info_select_public_item"
            />
        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_7"
            android:layout_marginRight="@dimen/dimen_7"
            layout="@layout/bitmap_repeat_layout"
            />
        <include android:layout_width="match_parent"
                 android:layout_height="@dimen/dimen_48"
                 android:id="@+id/high_stage_layout"
                 layout="@layout/activity_info_select_public_item"
            />
    </LinearLayout>
</LinearLayout>