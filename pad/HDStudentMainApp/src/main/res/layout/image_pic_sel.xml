<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="7"
        android:paddingTop="@dimen/dimen_22"
        android:paddingLeft="@dimen/dimen_25"
        android:paddingRight="@dimen/dimen_25"
        android:verticalSpacing="@dimen/dimen_15"
        android:horizontalSpacing="@dimen/dimen_15"
        android:layout_marginBottom="@dimen/dimen_53"
        android:scrollbars="none"
    >
    </GridView>



    <RelativeLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_54"
        android:layout_alignParentBottom="true"
        android:background="@color/color_008080">

        <TextView
            android:id="@+id/picSelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_00e6e6"
            android:textSize="@dimen/dimen_16"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/doneText"
            android:layout_width="@dimen/dimen_61"
            android:layout_height="@dimen/dimen_40"
            android:textColor="@color/color_00e6e6"
            android:textSize="@dimen/dimen_14"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_done_line_bg"
            android:layout_marginRight="@dimen/dimen_9"
            android:text="@string/done" />
    </RelativeLayout>
    <View
          android:layout_above="@id/bottomBar"
          android:layout_width="match_parent"
          android:layout_height="@dimen/dimen_20"
          android:background="@drawable/pic_sel_bar_shadow"/>
</RelativeLayout>