<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_132"
    android:layout_height="@dimen/dimen_46"
    android:layout_centerInParent="true"
    android:padding="@dimen/dimen_4"
    android:background="@drawable/slide_toggle_on"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_tab_left"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_36"
        android:layout_centerVertical="true"
        android:background="@drawable/slide_toggle"
        android:gravity="center"
        android:textColor="@color/color_805500"
        android:textSize="@dimen/dimen_14"/>

    <TextView
        android:id="@+id/tv_tab_right"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="@dimen/dimen_36"
        android:layout_toRightOf="@id/tv_tab_left"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/color_33ffff"
        android:textSize="@dimen/dimen_14"/>

</LinearLayout>
