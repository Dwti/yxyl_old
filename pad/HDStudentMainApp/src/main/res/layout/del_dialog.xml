<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_400"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/dimen_20"
        android:layout_marginRight="@dimen/dimen_20"
        android:background="@drawable/login_and_pwd_selector"
        android:paddingBottom="@dimen/dimen_20"
        android:paddingTop="@dimen/dimen_12">


        <RelativeLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rl_del_dialog_title">

            <ImageView
                    android:id="@+id/top_left_icon"
                    android:layout_width="@dimen/dimen_25"
                    android:layout_height="@dimen/dimen_25"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="@dimen/dimen_8"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_2"
                    android:background="@drawable/tips_icon"
                    android:scaleType="centerCrop"
                    />

            <TextView
                    android:id="@+id/del_dialog_title"
                    style="@style/shadow_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@id/top_left_icon"
                    android:gravity="left|center_vertical"
                    android:shadowColor="@color/color_ffff99"
                    android:text="@string/group_add_tip"
                    android:textColor="@color/color_805500"
                    android:textSize="@dimen/dimen_13"
                    />

        </RelativeLayout>



        <ImageView
            android:id="@+id/dash_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_del_dialog_title"
            android:layout_marginTop="@dimen/dimen_5"
            android:background="@drawable/repeat_common_line"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dash_line"
            android:layout_marginLeft="@dimen/dimen_15"
            android:layout_marginRight="@dimen/dimen_15"
            android:layout_marginTop="@dimen/dimen_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/del_dialog_cel"
                style="@style/shadow_text_style"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_40"
                android:layout_below="@id/dash_line"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:background="@drawable/register_code_selector"
                android:gravity="center"
                android:padding="@dimen/dimen_5"
                android:shadowColor="@color/color_ffff99"
                android:text="@string/group_info_cel"
                android:textColor="@color/color_805500"
                android:textSize="@dimen/dimen_17"
                />

            <TextView
                android:id="@+id/del_dialog_sure"
                style="@style/shadow_text_style"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimen_40"
                android:layout_below="@id/dash_line"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dimen_16"
                android:layout_weight="1"
                android:background="@drawable/register_code_selector"
                android:gravity="center"
                android:padding="@dimen/dimen_5"
                android:shadowColor="@color/color_ffff99"
                android:text="@string/group_add_ok"
                android:textColor="@color/color_805500"
                android:textSize="@dimen/dimen_17"
                android:textStyle="bold"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
